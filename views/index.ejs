<% include partials/header %>
	<div class="container-fluid text-center banner">
	  <h1>Agricultural Price Administrator</h1>
	</div>
	<div class="row">
		<div class="col-xl-8 offset-xl-2">
			<h3 class="heading">Commodity Items</h3>
			<ul class="list-group">
			<% todos.forEach(function(todo){ %>
				<li class="list-group-item list-group-item-action">
					<span class="lead">
						<%= todo.text %>
					</span>
					<div class="align-right buttons">
						<a href="/todos/<%=todo._id%>/edit" class="btn btn-lg btn-outline-warning change invisible">Edit</a>
						<form style="display: inline" method="POST" action="/todos/<%=todo._id%>?_method=DELETE">
							<button type="submit" class="btn btn-lg btn-outline-danger change invisible">Delete</button>
						</form>
					</div>
					<div class="clearfix"></div>
				</li>
			<% }); %>
			</ul>
			<hr>
			<a href="/todos/new" class=" new btn btn-lg btn-primary change invisible">New Item</a>
		</div>
	</div>

<% include partials/footer %>
